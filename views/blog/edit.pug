extends ../layout

block content
  h1= title
  form(action=`/blog/${blogPost._id}/edit`, method="POST")
    div
      label(for="title") Title
      input(type="text", name="title", value=blogPost.title, required)
    div
      label(for="content") Content
      textarea(name="content", required)= blogPost.content
    button(type="submit") Update